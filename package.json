{
  "name": "derech",
  "version": "0.1.0",
  "description": "Derech â€“ an offline-friendly study companion for exploring Judaism.",
  "main": "app/electron/main.js",
  "author": "Derech Team",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -r -s first \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 NODE_ENV=development electron .",
    "build": "vite build",
    "start": "electron .",
    "preview": "vite preview --host",
    "lint": "eslint \"{app,tests,playwright}/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e": "ts-node playwright/run-e2e.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "seed": "ts-node scripts/seed.ts",
    "fetch:tanakh": "node scripts/fetch-tanakh.mjs",
    "check:tanakh": "node scripts/check-tanakh-integrity.mjs",
    "import:tanakh:batch": "node ./scripts/local-import-tanakh.mjs"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "date-fns": "^3.4.0",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.43.0",
    "postcss": "^8.4.35",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.2.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@hebcal/core": "^5.0.5",
    "clsx": "^2.1.0",
    "dexie": "^3.2.4",
    "zustand": "^4.4.6"
  }
